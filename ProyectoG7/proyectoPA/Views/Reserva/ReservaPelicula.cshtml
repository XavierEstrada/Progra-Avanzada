@model proyectoPA.ViewModels.ReservaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reserva de Película";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container py-4">
        <h1>@Model.Pelicula.Titulo</h1>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="@Model.Pelicula.Poster_Url" alt="@Model.Pelicula.Titulo">
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Título</dt>
                    <dd class="col-sm-9">@Model.Pelicula.Titulo</dd>

                    <dt class="col-sm-3">Duración</dt>
                    <dd class="col-sm-9">@Model.Pelicula.Duracion minutos</dd>

                    <dt class="col-sm-3">Director</dt>
                    <dd class="col-sm-9">@Model.Pelicula.Director</dd>

                    <dt class="col-sm-3">Clasificación</dt>
                    <dd class="col-sm-9">@Model.Pelicula.Clasificacion</dd>
                </dl>

                <form asp-action="ReservaPelicula" method="post">
                    <div class="mb-3">
                        <label for="fechaSeleccionada" class="form-label">Fecha de la función</label>
                        <input type="date" id="fechaSeleccionada" name="FechaSeleccionada" class="form-control" value="@Model.FechaSeleccionada.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="mb-3">
                        <label for="idSala" class="form-label">Sala</label>
                        @Html.DropDownList("IdSala", Model.Salas, "Selecciona una sala", new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label for="cantidadEntradas" class="form-label">Número de boletos</label>
                        <input type="number" id="cantidadEntradas" name="CantidadEntradas" class="form-control" min="1" value="1" onchange="actualizarPrecio()">
                    </div>

                    <div class="mb-3">
                        <label for="precioTotal" class="form-label">Precio Total</label>
                        <input type="text" id="precioTotal" class="form-control" readonly value="@Model.PrecioPorEntrada">
                    </div>

                    <button type="submit" class="btn btn-primary">Comprar</button>
                    <a href="#" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function actualizarPrecio() {
            var cantidad = document.getElementById('cantidadEntradas').value;
            var precioPorEntrada = @Model.PrecioPorEntrada; // Asegúrate de pasar este valor desde el servidor
            var precioTotal = cantidad * precioPorEntrada;
            document.getElementById('precioTotal').value = precioTotal.toFixed(2);
        }
    </script>
</body>
