        background-position: center;
        font-family: Arial, sans-serif; /* Fuente para el contenido */
        color: #333; /* Color de texto principal */
        height: 100vh; /* Altura completa de la ventana */
        display: flex;
        justify-content: center;
        align-items: center;
    }

