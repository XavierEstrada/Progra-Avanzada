<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cinema World - Panel de Administración</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="@Url.Content("~/root/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/root/css/elementos.css")" rel="stylesheet" />
    <script src="@Url.Content("~/root/js/jquery-1.4.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/root/js/cufon-yui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/root/js/cufon-replace.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/root/js/Gill_Sans_400.font.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/root/js/script.js")" type="text/javascript"></script>
</head>

<body id="page1">
    <div class="tail-top">
        <div class="tail-bottom">
            <div id="main">
                <div id="header">
                    <div class="row-1">
                        <div class="fleft"><a>Cinema <span>World</span> - Panel de Administración</a></div>
                        <ul>
                            <li>
                                <span>
                                    @if (Session["Usuario"] != null)
                                    {
                                        @Session["Usuario"]
                                        <a href="@Url.Action("Perfil", "Usuario")" class="profile-link">Perfil</a>
                                        <img src="@Url.Content("~/root/img/user.png")" alt="User" class="user-icon" />
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index", "Home")"></a>
                                        <img src="@Url.Content("~/root/img/icon1-act.gif")" alt="Home" />
                                    }
                                </span>
                            </li>
                        </ul>
                    </div>
                    <div class="row-2">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="@Url.Action("ConsultaPelicula", "Pelicula")">Películas</a></li>
                            <li><a href="@Url.Action("ConsultaUsuarios", "Usuario")">Usuarios</a></li>
                            <li><a href="@Url.Action("CerrarSesion", "Home")">Cerrar sesión</a></li>
                        </ul>
                    </div>
                </div>

                <div id="content">
                    <div class="container-fluid">
                        @RenderBody()

                        @RenderSection("Scripts", required: false)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">Cufon.now();</script>
</body>
</html>
